SRC = ft_bzero.s \
	  ft_strcat.s \
	  ft_isalpha.s \
	  ft_strcpy.s \
	  ft_memcpy.s \
	  ft_cat.s \
	  ft_exit.s \
	  ft_strdup.s \
	  ft_log.s \
	  ft_puts.s \
	  ft_isdigit.s \
	  ft_isprint.s \
	  ft_isascii.s \
	  ft_isalnum.s \
	  ft_memalloc.s \
	  ft_toupper.s \
	  ft_tolower.s \
	  ft_memset.s \
	  ft_strlen.s
OBJ = $(SRC:%.s=%.o)
NAME = libfts.a

all: $(NAME)

$(NAME): $(OBJ)
	@gcc -c -g main.c
	@ld main.o $(OBJ) -macosx_version_min 10.10 -lSystem

	@clear
	@echo "##########################################################################################"
	@echo "#                                                                                        #"
	@echo "#                                                                                        #"
	@echo "# 888      8888888 888888b.   8888888888 88888888888     d8888  .d8888b.  888b     d888  #"
	@echo "# 888        888   888  *88b  888            888        d88888 d88P  Y88b 8888b   d8888  #"
	@echo "# 888        888   888  .88P  888            888       d88P888 Y88b.      88888b.d88888  #"
	@echo "# 888        888   8888888K.  8888888        888      d88P 888  *Y888b.   888Y88888P888  #"
	@echo "# 888        888   888  *Y88b 888            888     d88P  888     *Y88b. 888 Y888P 888  #"
	@echo "# 888        888   888    888 888            888    d88P   888       *888 888  Y8P  888  #"
	@echo "# 888        888   888   d88P 888            888   d8888888888 Y88b  d88P 888   *   888  #"
	@echo "# 88888888 8888888 8888888P*  888            888  d88P     888  *Y8888P*  888       888  #"
	@echo "#                                                                                        #"
	@echo "#	By: gbadi                                                                        #"
	@echo "#	gbadi@student.42.fr                                                              #"
	@echo "#                                                                                        #"
	@echo "##########################################################################################"

%.o: %.s
	@nasm -f macho64 $<

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all
